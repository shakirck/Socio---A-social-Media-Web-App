<link rel="stylesheet" href="/css/user_profile.css">
<h1>Profile</h1>
<p><%= profile_user.name %> </p>
<p><%= profile_user.email %> </p>


<% if(user.id==profile_user.id) {%>
    <img src="<%= user.avatar %> " alt="<%=user.name  %> " width="100"> 
    <!-- show form -->
    <form action="/users/update/<%= profile_user.id  %>" method="POST" enctype="multipart/form-data">
        <input type="text" name ="name" placeholder="Your Name" value=<%= profile_user.name %> >
        <input type="text" name ="email" placeholder="Your email" value=<%= profile_user.email %> >
        <input type="file" name="avatar" placeholder="Profile Picture">
        <input type="submit" value = "update">

    </form>
<%}else{  %>
    <!-- profile info only -->
    <p><%= profile_user.name %> </p>
    <p><%= profile_user.email %> </p>
<% } %>   